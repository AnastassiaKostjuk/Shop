@model ShopTARgv24.Models.RealEstate.RealEstateCreateUpdateViewModel

@if (Model.Id.HasValue)
{
    <h1>Update</h1>
}
else
{
    <h1>Create</h1>
}

<div>
    <form method="post" enctype="multipart/form-data">
        <input asp-for="Id" type="hidden" />
        <input asp-for="CreatedAt" type="hidden" />
        <input asp-for="ModifiedAt" type="hidden" />

        <div class="form-group row m-2">
            <label asp-for="Id" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="Id" class="form-control" />
            </div>
        </div>
        <div class="form-group row m-2">
            <label asp-for="Area" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="Area" class="form-control" />
            </div>
        </div>
        <div class="form-group row m-2">
            <label asp-for="Location" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="Location" class="form-control" />
            </div>
        </div>
        <div class="form-group row m-2">
            <label asp-for="RoomNr" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="RoomNr" class="form-control" />
            </div>
        </div>
        <div class="form-group row m-2">
            <label asp-for="BuildingType" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="BuildingType" class="form-control" />
            </div>
        </div>
        

        @if (Model.Id.HasValue)
        {
            <input asp-action="update" asp-controller="realestate" type="submit" class="btn btn-success m-1" value="Update" />
        }
        else
        {
            <input asp-action="create" asp-controller="realestate" type="submit" class="btn btn-success m-1" value="Create" />
        }
        <a asp-action="Index" asp-controller="realestate" class="btn btn-secondary m-1">Back</a>

    </form>
</div>